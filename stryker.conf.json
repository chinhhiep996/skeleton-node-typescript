{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "npm",
  "reporters": [
    "html",
    "progress",
    "dashboard"
  ],
  "testRunner": "mocha",
  "coverageAnalysis": "off",
  "mochaOptions": {
    "spec": ["test/**/*.spec.ts"],
    "opts": "./test/mocha.opts",
    "ui": "bdd",
    "require": ["ts-node/register", "source-map-support/register"]
  },
  "tsconfigFile": "tsconfig.json",
  "mutate": [
    "src/**/*.ts"
  ]
}
